# ========== APP ENVIRONMENT ==========
ENV=dev
PORT=8000

# ========== DATABASE ==========
# Local Postgres (Docker or installed)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/gst_itr_db

# ========== ADMIN / INTERNAL ==========
# Simple header auth for admin APIs (e.g., invoice seeding)
ADMIN_API_KEY=change_this_in_real_env

# ========== WHATSAPP CLOUD API ==========
# Used when talking directly to Meta Cloud API (test or prod)
WHATSAPP_VERIFY_TOKEN=my_whatsapp_verify_token    # you define this
WHATSAPP_ACCESS_TOKEN=                            # Meta temporary or permanent token
WHATSAPP_PHONE_NUMBER_ID=                         # From Meta "API Setup" page

# ========== AISENSY (INDIA-FIRST WHATSAPP BSP) ==========
# Used when you want to send/receive via AiSensy instead of Cloud API
AISENSY_API_KEY=                                  # From AiSensy dashboard
AISENSY_PROJECT_ID=                               # Optional / for campaigns if needed

# ========== SARVAM AI (SPEECH-TO-TEXT) ==========
SARVAM_API_KEY=                                   # From Sarvam dashboard
SARVAM_STT_URL=https://api.sarvam.ai              # Or specific STT endpoint if given

# ========== BHASHINI (GOVT TRANSLATION / ASR / TTS) ==========
BHASHINI_USER_ID=                                 # userID from Bhashini/ULCA portal
BHASHINI_ULCA_API_KEY=                            # ulcaApiKey from portal
BHASHINI_TRANSLATION_PIPELINE_ID=                 # chosen translation pipelineId
BHASHINI_PIPELINE_BASE_URL=https://meity-auth.ulcacontrib.org/ulca/apis

# ========== GST SANDBOX (NIC VIA GSP, e.g., MASTERGST) ==========
GST_SANDBOX_PROVIDER=mastergst
GST_SANDBOX_BASE_URL=https://api.mastergst.com

# MasterGST sandbox credentials
GST_SANDBOX_CLIENT_ID=                            # from MasterGST
GST_SANDBOX_CLIENT_SECRET=                        # from MasterGST
GST_SANDBOX_EMAIL=you@example.com                 # email used for sandbox

# GSTN sandbox taxpayer credentials
GST_SANDBOX_GSTIN=22AAAAA0000A1Z5                 # your sandbox GSTIN
GST_SANDBOX_GST_USERNAME=sandbox_gst_user        # GST portal username (sandbox)
GST_SANDBOX_STATE_CD=22                           # your state code (e.g. 36 for TS)
GST_SANDBOX_IP_ADDRESS=127.0.0.1                  # or your public IP

# Sandbox OTP (MasterGST uses fixed 575757 in sandbox)
GST_SANDBOX_OTP_DEFAULT=575757

# GSTR-3B endpoints (adjust once you have exact docs/paths)
GST_SANDBOX_GSTR3B_SAVE_PATH=/gstr3b/save         # placeholder
GST_SANDBOX_GSTR3B_FILE_PATH=/gstr3b/file         # placeholder

# ========== OPTIONAL FUTURE SERVICES (PLACEHOLDERS) ==========
# For OCR, email, storage, etc. later
# OCR_API_KEY=
# STORAGE_BUCKET_NAME=